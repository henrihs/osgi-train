package se.hirt.pi.adafruit.pwm;

import se.hirt.pi.adafruit.pwm.Controller.PinState;
import se.hirt.pi.adafruit.pwm.PWMDevice;

public class DcMotor {
	
	private static int[][] pins = {{8,9,10},{13,12,11},{2,3,4},{7,6,5}};
	
	private int pwmPin, in1, in2;
	private Controller controller;
	
	public DcMotor(Controller c, int port) {
		if (port < 1 || port > 4)
			throw new IllegalArgumentException("Port must be int between 0 and 3 inclusive");
		pwmPin = pins[port-1][0];
		in2 = pins[port-1][1];
		in1 = pins[port-1][2];
		controller = c;
	}
	
	public void setDirection(MotorCommand command) {
		switch (command) {
		case FORWARD:
			controller.setPin(in2, PinState.OFFF);
			controller.setPin(in1, PinState.ON);
			break;
			
		case BACKWARD:
			controller.setPin(in1, PinState.OFF);
			controller.setPin(in2, PinState.ON);
			break;
			
		case RELEASE:
			controller.setPin(in1, PinState.OFF);
			controller.setPin(in2, PinState.OFF);
			break;
		}
	}
	
	public void setSpeed(int speed) {
		if (speed < 0) speed = 0;
		else if (speed > 255) speed = 255;
		
		controller.setPwm
	}
}
